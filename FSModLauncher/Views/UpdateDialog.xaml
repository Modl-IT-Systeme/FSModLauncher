<Window x:Class="FSModLauncher.Views.UpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="Update Available"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Update Available" 
                   FontSize="24" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,16"/>

        <!-- Version Information -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <TextBlock FontSize="14" FontWeight="Medium">
                <Run Text="Current Version: "/>
                <Run Text="{Binding CurrentVersion}" FontWeight="Normal"/>
            </TextBlock>
            <TextBlock FontSize="14" FontWeight="Medium" Margin="0,4,0,0">
                <Run Text="Latest Version: "/>
                <Run Text="{Binding LatestVersion}" FontWeight="Normal"/>
            </TextBlock>
            <TextBlock Text="{Binding ReleaseDate}" 
                       FontSize="12" 
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Release Notes -->
        <GroupBox Grid.Row="2" Header="Release Notes" Margin="0,0,0,16">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="8">
                <TextBlock Text="{Binding ReleaseNotes}" 
                           TextWrapping="Wrap"
                           FontSize="12"
                           LineHeight="18"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Skip" 
                    Width="80" 
                    Click="SkipButton_Click" 
                    IsCancel="True"
                    Margin="0,0,8,0"/>
            <Button Content="Download" 
                    Width="80" 
                    Style="{StaticResource AccentButtonStyle}" 
                    Click="DownloadButton_Click" 
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>