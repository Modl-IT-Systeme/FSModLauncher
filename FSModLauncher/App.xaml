<Application x:Class="FSModLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Status badge colors using proper SolidColorBrush -->
            <SolidColorBrush x:Key="StatusSuccessBrush" Color="#0078D4"/>
            <SolidColorBrush x:Key="StatusErrorBrush" Color="#C42B1C"/>
            <SolidColorBrush x:Key="StatusWarningBrush" Color="#F7630C"/>
            <SolidColorBrush x:Key="AccentTextBrush" Color="#0078D4"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>